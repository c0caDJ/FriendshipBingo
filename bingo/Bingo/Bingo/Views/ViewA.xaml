<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             x:Class="Bingo.Views.ViewA">
    <StackLayout BackgroundColor="White">
        <Label TextColor="Green" HorizontalOptions="Center" FontSize="30" Margin="0, 100, 0, 0" Text="Start a New Game" FontAttributes="Bold" />
        
        <Label TextColor="Green" HorizontalOptions="Center" FontSize="26" Text="Enter Game Name:" Margin="0, 20, 0, 0" />
        <Entry TextColor="Navy"/>
        
        <Label TextColor="Green" HorizontalOptions="Center" FontSize="26" Text="Enter number of players:" Margin="0, 20, 0, 0" />
        <Entry TextColor="Navy" Placeholder="'5'"/>
        
        <Button Command="{Binding NavigateCommand}" Text="Continue" BackgroundColor="Green" TextColor="White" Margin="10, 100, 10, 0" />
    </StackLayout>

</ContentPage>