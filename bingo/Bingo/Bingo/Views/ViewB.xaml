<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             x:Class="Bingo.Views.ViewB">
    <StackLayout BackgroundColor="White">
    <Label TextColor="Green" HorizontalOptions="Center" FontSize="26" Margin="0, 100, 0, 0" Text="Add the Tiles!" FontAttributes="Bold"/>
        
        <Label TextColor="Green" LineHeight="1" HorizontalOptions="Center" FontSize="20" 
               Text="Pass the phone to each player and add a fun fact about yourself!"
               HorizontalTextAlignment="Center" />
        <Editor TextColor="Navy" HeightRequest="100" />

        <Button TextColor="White" BackgroundColor="Gray" Text="Submit Fact" />
        <Button TextColor="White" BackgroundColor="Green" Text="Ready to play!" Margin="0,100,0,0" />

    </StackLayout>

</ContentPage>